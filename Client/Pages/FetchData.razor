@page "/fetchdata"
@using BlazorApp.Shared 
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (data == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            
                <tr>
                    <td>@data.Date.ToShortDateString()</td>
                    <td>@data.TemperatureC</td>
                    <td>@data.TemperatureF</td>
                    <td>@data.Summary</td>
                </tr>
            
        </tbody>
    </table>
}

@code {
    private WeatherForecast data;

    protected override async Task OnInitializedAsync()
    {
      try
      {
        data = await Http.GetFromJsonAsync<WeatherForecast>("/api/WeatherForecastGet");
      }
      catch (Exception ex)
      {
        Console.WriteLine(ex.ToString());
      }
    }
}
